public final class Board {
    private final  Color[][] board;
    private  int n;
   // creating the board with n row n column
    public Board(int n) {
       if(n<=0) throw new IllegalArgumentException("The board can t have less than 1 row, 1 column");
       this.n = n;
       this.board = new Color[n][n];
       initialize();
   }
   // initilaizing the board with empty values and invisible values for out of bounds
   private void initialize() {
       for(int i=0; i<n; i++) {
           for(int j=0; j<n; j++) {
               if((i + j) >= (n - 1)){
               board[i][j] = Color.EMPTY;}
               else
                   board[i][j] = Color.INV;
           }
       }
   }
   public int getsize(){
        return n;}

   public Color getcell(int i, int j){
       return board[i][j];
   }
   public void getmovered(int i, int j,Color color){
       this.board[i][j] = Color.RED;
   }
   public void getmoveblack(int i, int j, Color color){
       this.board[i][j] = Color.BLACK;
   }

}
